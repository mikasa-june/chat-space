.chat-main
  .chat-main__group-info
    .container
      .container__left
        .group-name
          -# 現在のグループ名を表示
          =@group.name
        .member-list
          -# 現在のグループに所属するユーザー名
          -@group.users.each do |user|
            = user.name
      .container__btn
        =link_to "#", class: "edit-btn" do
          Edit
  .chat-main__message-list
    .messages
      = render @messages
  .chat-main__message-form
    .container
      .message-contanier
        = form_for [@group, @message] do |f|
          .textarea
            = f.text_field :content, class: 'message', placeholder: 'type a message'
            .imagearea 
              = f.label :image do
                = icon('fas', 'image')
              = f.file_field :image, class: 'hidden'
          .btn
            = f.submit 'Send', class: 'send-btn'

